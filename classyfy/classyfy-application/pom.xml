	<artifactId>classyfy</artifactId>
	<packaging>apk</packaging>
	<name>ClassyFy Android Application</name>
    <description>Classy Sample from Android lightweight Java Persistence API</description>
    <url>http://cybersearch2.com.au</url>
    <licenses>
     <license>
       <name>GPLv3</name>
       <url>http://www.gnu.org/licenses/</url>
       <distribution>repo</distribution>
     </license>
    </licenses>
    <developers>
        <developer>
          <id>andrew-bowley</id>
          <name>Andrew Bowley</name>
          <url>http://cybersearch2.com.au/</url>
          <organization>cybersearch2</organization>
          <organizationUrl>http://cybersearch2.com.au/</organizationUrl>
          <roles>
            <role>architect</role>
            <role>developer</role>
          </roles>
          <timezone>+10</timezone>
        </developer>
    </developers>
	<repositories>
	    <repository>
	        <id>android-support</id>
	        <url>file://${env.ANDROID_HOME}/extras/android/m2repository</url>
	    </repository>
	</repositories>
	<dependencies>
